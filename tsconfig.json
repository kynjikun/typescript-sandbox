{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "jsx": "preserve",
    "sourceMap": true,
    "outDir": "./src/scripts",
    "noImplicitAny": true,
    "lib": [ "es2015", "dom"],
    "types": ["node"],
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/scripts/**/*"
  ],
  "compileOnSave": true
}
